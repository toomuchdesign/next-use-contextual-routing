{
  "name": "next-use-contextual-routing",
  "description": "Generate Next.js contextual routing paths",
  "version": "3.2.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "preversion": "npm run prepare",
    "version": "git add package.json",
    "postversion": "git push && git push --tags",
    "prepare": "npx simple-git-hooks && npm run source:check && npm run test && npm run build",
    "test": "jest --coverage",
    "tag": "node ./scripts/tag.js",
    "prettier:check": "prettier . --check",
    "prettier:fix": "npm run prettier:check -- --write",
    "type:check": "tsc --noEmit",
    "source:check": "npm run prettier:check && npm run type:check",
    "source:fix": "npm run prettier:fix",
    "start": "npm run demo:start",
    "demo:start": "cd ./demo && next",
    "demo:build": "npm run build && cd ./demo && BUILD_TARGET=github-pages next build && touch ./out/.nojekyll"
  },
  "keywords": [
    "next",
    "next.js",
    "contextual",
    "routing",
    "snowlift",
    "route as modal",
    "modal route",
    "hook"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toomuchdesign/next-use-contextual-routing.git"
  },
  "author": "Andrea Carraro <me@andreacarraro.it>",
  "license": "ISC",
  "dependencies": {
    "qs-stringify": "^1.2.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.2.3",
    "@types/react": "^18.0.25",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "next": "^15.0.0",
    "prettier": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-modal": "^3.16.1",
    "react-test-renderer": "^18.2.0",
    "simple-git-hooks": "^2.11.1",
    "ts-jest": "^29.0.3",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "next": "^15.0.0",
    "react": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "coveragePathIgnorePatterns": [
      "__tests__"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "testEnvironment": "jsdom"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run source:check && npm run test"
  }
}
